                                        <Thumb x:Name="HorizontalThumb" AutomationProperties.AccessibilityView="Raw" Margin="-4,0" RenderTransformOrigin="0.5,0.5" Grid.Column="1" DataContext="{TemplateBinding Value}" FocusVisualMargin="-14,-6,-14,-6" Height="{TemplateBinding Height}" Grid.RowSpan="3" Grid.Row="0" Style="{StaticResource SliderThumbStyle}" Width="{TemplateBinding Height}">
                                            <Thumb.RenderTransform>
                                                <ScaleTransform x:Name="ThumbTransform" ScaleX="1" ScaleY="1"/>
                                            </Thumb.RenderTransform>
                                        </Thumb>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
